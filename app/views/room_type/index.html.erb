<h1> Room types </h1>
<table>
  <thead>
    <tr>
   
      <th>Roomtype</th>
      <th>Number of rooms available on this day</th>

    </tr>
  </thead>
  <tbody>
<% @room_type.each do |room_type| %>
      <tr>
      	<% if room_type.admin_id == current_admin.id %>
      	  <td><%= room_type.room_type%></td>
      	<% availability = Room.where('(room_type_select =? )',room_type.id).count - Booking.where('(room_type_id =? AND check_in_date >= ? )',room_type.id,Time.now ).count %></td>
         <td> <%= availability %></td>
         <% if (availability != 0) %>
       	<td> <%= link_to 'Click here for book the room', new_booking_path(room_type_id: room_type)%></td>
        <p>
        	<% end %>
        <% end %>
 <% end %>